rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Conversations and Messages
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Alerts (New)
    match /alerts/{alertId} {
      allow read, write: if request.auth != null;
    }
  }
}
